<Page x:Class="WPF_HTTP_Client.Pages.PredictionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_HTTP_Client.Pages"
      xmlns:uielements="clr-namespace:WPF_HTTP_Client.UIElements"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PredictionsPage"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10,10,10,10">
            <ScrollViewer>
                <StackPanel x:Name="StackPanel_Predictions" Margin="10">
                    <uielements:PredictionElement x:Name="Prediction1"/>
                    <!--<Rectangle Height="40" RadiusX="15" RadiusY="15" Fill="LightGray" Margin="0,5,0,5"/>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
